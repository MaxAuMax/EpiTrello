<turbo-frame id="task_details">
  <h1><%= @task.title %></h1>

  <div class="task-details">
    <p><strong>Description:</strong> <%= @task.description %></p>
    <p><strong>Due Date:</strong> <%= @task.due_date&.strftime("%d/%m/%Y") || "Not set" %></p>
    <p><strong>Status:</strong> <%= @task.task_status&.name %></p>
    <p><strong>Assigned to:</strong> <%= @task.assignee&.username || "Not assigned" %></p>
    <p><strong>Project:</strong> <%= link_to @task.project.name, project_path(@task.project) %></p>
  </div>

  <div class="actions">
    <%= link_to "Edit", edit_project_task_path(@task.project, @task), class: 'btn-edit' %>
  </div>
</turbo-frame>

<style>
  .task-details {
    border: 1px solid #c9c9c9;
    border-radius: 5px;
    padding: 20px;
    margin: 20px 0;
  }

  .actions {
    display: flex;
    gap: 10px;
    margin: 20px 0;
  }
</style>