<div class="page-container">
  <div class="page-header">
    <div class="page-header-content">
      <h1 class="page-title">Tags du projet : <%= @project.name %></h1>
      <p class="page-description">Gérez les tags de ce projet pour organiser vos tâches</p>
    </div>
    <div class="page-header-actions">
      <%= link_to new_project_tag_path(@project), data: { turbo_frame: "modal" }, class: 'btn-primary' do %>
        <svg style="width: 18px; height: 18px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Nouveau tag
      <% end %>
      <%= link_to project_path(@project), class: 'btn-secondary' do %>
        <svg style="width: 18px; height: 18px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Retour au projet
      <% end %>
    </div>
  </div>

  <div class="tags-container">
    <% if @tags.any? %>
      <div class="tags-grid">
        <% @tags.each do |tag| %>
          <div class="tag-card">
            <div class="tag-card-header">
              <div class="tag-preview" style="background-color: <%= tag.color %>;">
                <span class="tag-name"><%= tag.name %></span>
              </div>
              <div class="tag-actions">
                <%= link_to edit_project_tag_path(@project, tag), data: { turbo_frame: "modal" }, class: 'tag-action-btn' do %>
                  <svg style="width: 16px; height: 16px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                  </svg>
                <% end %>
                <%= link_to project_tag_path(@project, tag), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer ce tag ?' }, class: 'tag-action-btn tag-action-delete' do %>
                  <svg style="width: 16px; height: 16px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="3 6 5 6 21 6"></polyline>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                  </svg>
                <% end %>
              </div>
            </div>
            <div class="tag-card-info">
              <span class="tag-color-code"><%= tag.color %></span>
              <% task_count = tag.tasks.count %>
              <span class="tag-task-count">
                <%= task_count %> <%= task_count > 1 ? 'tâches' : 'tâche' %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <svg style="width: 64px; height: 64px; color: var(--color-slate-300);" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
          <line x1="7" y1="7" x2="7.01" y2="7"></line>
        </svg>
        <h3>Aucun tag pour le moment</h3>
        <p>Créez votre premier tag pour organiser les tâches de ce projet</p>
        <%= link_to new_project_tag_path(@project), data: { turbo_frame: "modal" }, class: 'btn-primary' do %>
          Créer un tag
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<turbo-frame id="modal"></turbo-frame>

<style>
