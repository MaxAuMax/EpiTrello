<div class="modal-overlay" data-controller="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2><%= @tag.new_record? ? 'Nouveau tag' : 'Modifier le tag' %></h2>
      <button type="button" class="modal-close" data-action="click->modal#close">×</button>
    </div>

    <%= form_with(model: [@project, @tag], local: false, html: { class: 'tag-form' }) do |f| %>
      <div class="modal-body">
        <% if @tag.errors.any? %>
          <div class="alert alert-error">
            <strong><%= pluralize(@tag.errors.count, "erreur") %> :</strong>
            <ul>
              <% @tag.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name, 'Nom du tag', class: 'form-label' %>
          <%= f.text_field :name, class: 'form-input', placeholder: 'Ex: Urgent, Bug, Feature...', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :color, 'Couleur', class: 'form-label' %>
          <div class="color-input-group">
            <%= f.color_field :color, class: 'form-color-input' %>
            <%= f.text_field :color, class: 'form-input form-color-text', placeholder: '#000000' %>
          </div>
          <div class="color-presets">
            <span class="color-preset-label">Couleurs suggérées :</span>
            <div class="color-preset-list">
              <% [
                '#ef4444', '#f97316', '#f59e0b', '#eab308', '#84cc16',
                '#22c55e', '#10b981', '#14b8a6', '#06b6d4', '#0ea5e9',
                '#3b82f6', '#6366f1', '#8b5cf6', '#a855f7', '#d946ef',
                '#ec4899', '#f43f5e', '#64748b', '#475569', '#1e293b'
              ].each do |color| %>
                <button type="button" class="color-preset" style="background-color: <%= color %>;" data-color="<%= color %>" onclick="document.getElementById('<%= f.object_name %>_color').value='<%= color %>';event.preventDefault();"></button>
              <% end %>
            </div>
          </div>
        </div>

        <div class="tag-preview-section">
          <span class="tag-preview-label">Aperçu :</span>
          <div class="tag-preview-display">
            <span class="tag-badge" id="tag-preview" style="background-color: <%= @tag.color || '#808080' %>;">
              <span id="tag-preview-text"><%= @tag.name.presence || 'Nom du tag' %></span>
            </span>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn-secondary" data-action="click->modal#close">Annuler</button>
        <%= f.submit @tag.new_record? ? 'Créer le tag' : 'Mettre à jour', class: 'btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const nameInput = document.querySelector('input[name="tag[name]"]');
  const colorInput = document.querySelector('input[type="color"]');
  const colorTextInput = document.querySelector('.form-color-text');
  const preview = document.getElementById('tag-preview');
  const previewText = document.getElementById('tag-preview-text');

  if (nameInput) {
    nameInput.addEventListener('input', function() {
      previewText.textContent = this.value || 'Nom du tag';
    });
  }

  if (colorInput && colorTextInput) {
    colorInput.addEventListener('input', function() {
      colorTextInput.value = this.value;
      preview.style.backgroundColor = this.value;
    });

    colorTextInput.addEventListener('input', function() {
      if (/^#[0-9A-F]{6}$/i.test(this.value)) {
        colorInput.value = this.value;
        preview.style.backgroundColor = this.value;
      }
    });
  }
});
</script>

