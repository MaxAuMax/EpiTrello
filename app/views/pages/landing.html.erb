<div class="landing-page">
  <!-- Navigation -->
  <nav class="nav">
    <div class="container">
      <a href="#" class="logo">
        <div class="logo-icon">
          <svg style="margin: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="3" y1="9" x2="21" y2="9"></line>
            <line x1="9" y1="9" x2="9" y2="21"></line>
          </svg>
        </div>
        <span class="logo-text">Flow</span>
      </a>

      <div class="nav-links">
        <a href="#partners">Partners</a>
        <a href="#features">Features</a>
        <a href="#cta">Get Started</a>
      </div>

      <div class="nav-actions">
        <% if user_signed_in? %>
          <%= link_to "Dashboard", user_path(current_user), class: "btn btn-primary btn-sm" %>
        <% else %>
          <%= link_to "Log in", new_user_session_path, class: "btn-link" %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
    </div>
  </nav>

  <main class="main-content">
    <%= render partial: 'pages/kanban_hero' %>

    <!-- Partners Section -->
    <div id="partners" class="partners-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">
            Trusted by <span class="text-gradient-blue">industry leaders</span>
          </h2>
          <p class="section-description">
            Join the companies already using Flow to transform their workflow and deliver exceptional results.
          </p>
        </div>
        <div class="partners-grid">
          <div class="partner-logo">
            <%= image_tag "ultraclear.svg", alt: "Ultra Clear" %>
          </div>
          <div class="partner-logo">
            <%= image_tag "logoipsum.svg", alt: "Logoipsum" %>
          </div>
          <div class="partner-logo">
            <%= image_tag "lighttouch.svg", alt: "LightTouch" %>
          </div>
          <div class="partner-logo">
            <%= image_tag "epitech.svg", alt: "Epitech" %>
          </div>
          <div class="partner-logo">
            <%= image_tag "neurodawn.svg", alt: "NeuroDawn" %>
          </div>
          <div class="partner-logo">
            <%= image_tag "waterdrop.svg", alt: "Waterdrop" %>
          </div>
          <div class="partner-logo">
            <%= image_tag "purple.svg", alt: "Purple" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="container">
      <%= render partial: 'pages/feature_views' %>
    </div>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div class="logo">
            <div class="logo-icon">
              <svg style="margin: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="3" y1="9" x2="21" y2="9"></line>
                <line x1="9" y1="9" x2="9" y2="21"></line>
              </svg>
            </div>
            <span class="logo-text">Flow</span>
          </div>
          <p class="footer-copyright">
            Â© <%= Time.current.year %> Flow Inc. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </main>
</div>

<style>
/* Landing Page */
.landing-page {
  min-height: 100vh;
  background: white;
}

/* Navigation */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 50;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid var(--color-slate-100);
}

.nav .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--spacing-xl);
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

@media (min-width: 768px) {
  .nav .container {
    padding: 0 var(--spacing-2xl);
  }
}

@media (min-width: 1024px) {
  .nav .container {
    max-width: 100%;
    padding: 0 var(--spacing-4xl);
  }
}

.logo {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  text-decoration: none;
  user-select: none;
}

.nav-links {
  display: none;
  align-items: center;
  gap: var(--spacing-xl);
  font-size: 0.875rem;
  font-weight: 500;
}

@media (min-width: 768px) {
  .nav-links {
    display: flex;
  }
}

.nav-links a {
  color: var(--color-slate-500);
  text-decoration: none;
  transition: color var(--transition-fast);
}

.nav-links a:hover {
  color: var(--color-slate-900);
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.btn-link {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--color-slate-500);
  text-decoration: none;
  transition: color var(--transition-fast);
}

.btn-link:hover {
  color: var(--color-slate-900);
}

.btn-sm {
  padding: var(--spacing-sm) var(--spacing-md);
  font-size: 0.875rem;
}

/* Main Content */
.main-content {
  padding-top: 64px;
}

/* Container */
.container {
  max-width: 100%;
  width: 100%;
  margin: 0 auto;
  padding: 0 var(--spacing-xl);
}

/* Partners Section */
.partners-section {
  border-top: 1px solid var(--color-slate-100);
  border-bottom: 1px solid var(--color-slate-100);
  background: white;
  padding: var(--spacing-5xl) 0;
}

.partners-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  gap: var(--spacing-4xl);
}

.partner-logo {
  display: flex;
  align-items: center;
  justify-content: center;
}

@media (min-width: 768px) {
  .partner-logo {
    animation: float 4s ease-in-out infinite;
  }
}

.partner-logo img {
  width: 96px;
  height: 96px;
  object-fit: contain;
}

.partner-logo:nth-child(1) { animation-delay: 0s; }
.partner-logo:nth-child(2) { animation-delay: 0.4s; }
.partner-logo:nth-child(3) { animation-delay: 0.8s; }
.partner-logo:nth-child(4) { animation-delay: 1.2s; }
.partner-logo:nth-child(5) { animation-delay: 1.6s; }
.partner-logo:nth-child(6) { animation-delay: 2s; }
.partner-logo:nth-child(7) { animation-delay: 2.4s; }

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(25px); }
}

/* Footer */
.footer {
  background: var(--color-slate-50);
  border-top: 1px solid var(--color-slate-200);
  padding: var(--spacing-xl) 0;
}

.footer-content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  gap: var(--spacing-md);
  padding: 0 var(--spacing-md);
}

@media (min-width: 768px) {
  .footer-content {
    padding: 0 var(--spacing-xl);
  }
}

.footer-copyright {
  font-size: 0.875rem;
  color: var(--color-slate-400);
}
</style>
