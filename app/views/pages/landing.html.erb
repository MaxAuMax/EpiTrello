<div class="landing-page">
  <!-- Navigation -->
  <nav class="landing-nav">
    <div class="container">
      <a href="#" class="landing-logo">
        <div class="landing-logo-icon">
          <svg style="margin: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="3" y1="9" x2="21" y2="9"></line>
            <line x1="9" y1="9" x2="9" y2="21"></line>
          </svg>
        </div>
        <span class="landing-logo-text">
          Flow
        </span>
      </a>

      <div class="landing-nav-links">
        <a href="#partners">Partners</a>
        <a href="#features">Features</a>
        <a href="#cta">Get Started</a>
      </div>

      <div class="landing-nav-actions">
        <%= link_to "Log in", new_user_session_path, class: "landing-btn-login" %>
        <%= link_to "Sign up", new_user_registration_path, class: "landing-btn-signup" %>
      </div>
    </div>
  </nav>

  <main class="landing-main">
    <%= render partial: 'pages/kanban_hero' %>

    <!-- Social Proof Strip -->
    <div id="partners" class="social-proof">
      <div class="container">
        <div class="partners-header">
          <h2 class="partners-title">
            Trusted by <span class="partners-title-gradient">industry leaders</span>
          </h2>
          <p class="partners-description">
            Join the companies already using Flow to transform their workflow and deliver exceptional results.
          </p>
        </div>
        <div class="social-proof-logos">
          <%# Ultra Clear %>
          <div class="social-proof-logo">
            <%= image_tag "ultraclear.svg", alt: "Ultra Clear" %>
          </div>
          <%# Logoipsum %>
          <div class="social-proof-logo">
            <%= image_tag "logoipsum.svg", alt: "Logoipsum" %>
          </div>
          <%# Epitech %>
          <div class="social-proof-logo">
            <%= image_tag "epitech.svg", alt: "Epitech" %>
          </div>
          <%# NeuroDawn %>
          <div class="social-proof-logo">
            <%= image_tag "neurodawn.svg", alt: "NeuroDawn" %>
          </div>
          <%# Waterdrop %>
          <div class="social-proof-logo">
            <%= image_tag "waterdrop.svg", alt: "Waterdrop" %>
          </div>
          <%# Purple %>
          <div class="social-proof-logo">
            <%= image_tag "purple.svg", alt: "Purple" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="container">
      <%= render partial: 'pages/feature_views' %>
    </div>

    <!-- Footer -->
    <footer class="landing-footer">
      <div class="container">
        <div class="footer-bottom">
          <div class="footer-logo">
            <div class="footer-logo-icon">
              <svg style="margin: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="3" y1="9" x2="21" y2="9"></line>
                <line x1="9" y1="9" x2="9" y2="21"></line>
              </svg>
            </div>
            <span class="footer-logo-text">Flow</span>
          </div>
          <p class="footer-copyright">
            Â© 2025 Flow Inc. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </main>
</div>

<style>
/* Landing Page Styles */
.landing-page {
  min-height: 100vh;
  background: white;
  ::selection {
    background: #ffedd4;
    color: #7e2a0c;
  }
}

.landing-page * {
  box-sizing: border-box;
}

/* Navigation */
.landing-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 50;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid #f1f5f9;
}

.landing-nav .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.landing-logo {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  text-decoration: none;
  user-select: none;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
}

.landing-logo-icon {
  width: 32px;
  height: 32px;
  background: linear-gradient(to bottom right, #f97316, #ec4899);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.landing-logo-text {
  font-weight: 700;
  font-size: 1.25rem;
  color: #0f172a;
  letter-spacing: -0.025em;
}

.landing-nav-links {
  display: none;
  align-items: center;
  gap: 2rem;
  font-size: 0.875rem;
  font-weight: 500;
  color: #64748b;
}

@media (min-width: 768px) {
  .landing-nav-links {
    display: flex;
  }
}

.landing-nav-links a {
  color: #64748b;
  text-decoration: none;
  transition: color 0.2s;
}

.landing-nav-links a:hover {
  color: #0f172a;
}

.landing-nav-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.landing-btn-login {
  display: none;
  font-size: 0.875rem;
  font-weight: 500;
  color: #64748b;
  text-decoration: none;
}

@media (min-width: 768px) {
  .landing-btn-login {
    display: block;
  }
}

.landing-btn-login:hover {
  color: #0f172a;
}

.landing-btn-signup {
  padding: 0.5rem 1rem;
  background: #0f172a;
  color: white;
  border-radius: 9999px;
  font-size: 0.875rem;
  font-weight: 500;
  text-decoration: none;
  transition: background 0.2s;
  display: inline-block;
}

.landing-btn-signup:hover {
  background: #1e293b;
}

/* Main Content */
.landing-main {
  padding-top: 64px;
}

/* Container */
.container {
  max-width: 100%;
  width: 100%;
  margin: 0 auto;
  padding: 0 2rem;
}

/* Social Proof */
.social-proof {
  border-top: 1px solid #f1f5f9;
  border-bottom: 1px solid #f1f5f9;
  background: white;
  padding: 6rem 0;
}

.partners-header {
  text-align: center;
  max-width: 48rem;
  margin: 0 auto 4rem;
}

.partners-title {
  font-size: 2.5rem;
  font-weight: 700;
  letter-spacing: -0.025em;
  color: #0f172a;
  margin-bottom: 1rem;
}

@media (min-width: 768px) {
  .partners-title {
    font-size: 3rem;
  }
}

.partners-title-gradient {
  background: linear-gradient(to right, #155dfc, #7f22fe);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.partners-description {
  font-size: 1.125rem;
  color: #64748b;
  line-height: 1.75;
}

.social-proof-logos {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  gap: 8rem;
}

.social-proof-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  animation: float 4s ease-in-out infinite;
}

.social-proof-logo img {
  width: 96px;
  height: 96px;
  object-fit: contain;
}

.social-proof-logo:nth-child(1) {
  animation-delay: 0s;
}

.social-proof-logo:nth-child(2) {
  animation-delay: 0.4s;
}

.social-proof-logo:nth-child(3) {
  animation-delay: 0.8s;
}

.social-proof-logo:nth-child(4) {
  animation-delay: 1.2s;
}

.social-proof-logo:nth-child(5) {
  animation-delay: 1.6s;
}

.social-proof-logo:nth-child(6) {
  animation-delay: 2s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(25px);
  }
}

.social-proof-logo:empty {
  height: 32px;
  width: 96px;
  filter: grayscale(1) opacity(0.5);
  background: #1e293b;
  border-radius: 4px;
}

.social-proof-logo svg {
  height: 100%;
  width: auto;
}

/* Footer */
.landing-footer {
  background: #f8fafc;
  border-top: 1px solid #e2e8f0;
  padding: 2rem 0;
}

.footer-bottom {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 1rem;
  padding: 0 2rem;
}

.footer-logo {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

@media (min-width: 768px) {
  .footer-logo {
    margin-bottom: 0;
  }
}

.footer-logo-icon {
  width: 24px;
  height: 24px;
  background: linear-gradient(to bottom right, #f97316, #ec4899);
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.footer-logo-text {
  font-weight: 700;
  color: #0f172a;
}

.footer-copyright {
  font-size: 0.875rem;
  color: #94a3b8;
}
</style>

