    filter: blur(100px);
}

.hero-gradient-3 {
    position: absolute;
    top: 20%;
    left: 20%;
    width: 400px;
    height: 400px;
    background: rgba(244, 114, 182, 0.15);
    border-radius: 50%;
    filter: blur(80px);
}

.hero-content {
    position: relative;
    z-index: 10;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
}

