<section class="hero-section">
    <div class="hero-bg">
        <div class="hero-gradient-1"></div>
        <div class="hero-gradient-2"></div>
        <div class="hero-gradient-3"></div>
    </div>

    <div class="container">
        <div class="hero-content">
        <div class="hero-text">
            <div class="hero-badge">
            <span class="hero-badge-dot"></span>
            <span class="hero-badge-text">v2.0 is now live</span>
            </div>

            <h1 class="hero-title">
            Move work <br>
            <span class="hero-title-gradient">forward.</span>
            </h1>

            <p class="hero-description">
            The flexible platform that connects your team's work to their goals. 
            Visualize progress, automate workflows, and ship faster.
            </p>

            <div class="hero-buttons">
            <%= link_to new_user_registration_path, class: "hero-btn-primary" do %>
                Start for free
                <svg style="width: 16px; height: 16px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
            <% end %>
            <button class="hero-btn-secondary">View demo</button>
            </div>

            <div class="hero-social-proof">
            <div class="hero-avatars">
                <% 4.times do %>
                <div class="hero-avatar">
                    <svg style="width: 16px; height: 16px; color: #94a3b8;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                </div>
                <% end %>
            </div>
            <p>Trusted by 10,000+ teams</p>
            </div>
        </div>

        <div class="hero-board">
            <div class="hero-board-inner">
            <!-- To Do Column -->
            <div class="kanban-column">
                <div class="kanban-header">
                <div class="kanban-title-group">
                    <div class="kanban-dot" style="background: #94a3b8;"></div>
                    <h3 class="kanban-title">To Do</h3>
                    <span class="kanban-count">3</span>
                </div>
                <svg style="width: 16px; height: 16px; color: #cbd5e1;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                </div>
                <div class="kanban-cards">
                <div class="kanban-card">
                    <div class="kanban-card-accent" style="background: #3b82f6;"></div>
                    <div class="kanban-card-header">
                    <span class="kanban-card-tag">Strategy</span>
                    <svg style="width: 16px; height: 16px; color: #e2e8f0;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="1"></circle>
                        <circle cx="19" cy="12" r="1"></circle>
                        <circle cx="5" cy="12" r="1"></circle>
                    </svg>
                    </div>
                    <h3 class="kanban-card-title">Research competitors</h3>
                    <div class="kanban-card-footer">
                    <div class="kanban-card-avatar" style="background: #60a5fa;"></div>
                    <div class="kanban-card-date">
                        <svg style="width: 12px; height: 12px; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <span>Today</span>
                    </div>
                    </div>
                </div>

                <div class="kanban-card">
                    <div class="kanban-card-accent" style="background: #a855f7;"></div>
                    <div class="kanban-card-header">
                    <span class="kanban-card-tag">Product</span>
                    <svg style="width: 16px; height: 16px; color: #e2e8f0;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="1"></circle>
                        <circle cx="19" cy="12" r="1"></circle>
                        <circle cx="5" cy="12" r="1"></circle>
                    </svg>
                    </div>
                    <h3 class="kanban-card-title">Draft product requirements</h3>
                    <div class="kanban-card-footer">
                    <div class="kanban-card-avatar" style="background: #c084fc;"></div>
                    <div class="kanban-card-date">
                        <svg style="width: 12px; height: 12px; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <span>Today</span>
                    </div>
                    </div>
                </div>

                <div class="kanban-fade"></div>
                </div>
            </div>

            <!-- In Progress Column -->
            <div class="kanban-column">
                <div class="kanban-header">
                <div class="kanban-title-group">
                    <div class="kanban-dot" style="background: #fb923c;"></div>
                    <h3 class="kanban-title">In Progress</h3>
                    <span class="kanban-count">2</span>
                </div>
                <svg style="width: 16px; height: 16px; color: #cbd5e1;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                </div>
                <div class="kanban-cards">
                <div class="kanban-card">
                    <div class="kanban-card-accent" style="background: #ec4899;"></div>
                    <div class="kanban-card-header">
                    <span class="kanban-card-tag">Design</span>
                    <svg style="width: 16px; height: 16px; color: #e2e8f0;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="1"></circle>
                        <circle cx="19" cy="12" r="1"></circle>
                        <circle cx="5" cy="12" r="1"></circle>
                    </svg>
                    </div>
                    <h3 class="kanban-card-title">Design system audit</h3>
                    <div class="kanban-card-footer">
                    <div class="kanban-card-avatar" style="background: #f472b6;"></div>
                    <div class="kanban-card-date">
                        <svg style="width: 12px; height: 12px; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <span>Today</span>
                    </div>
                    </div>
                </div>

                <div class="kanban-fade"></div>
                </div>
            </div>

            <!-- Done Column -->
            <div class="kanban-column">
                <div class="kanban-header">
                <div class="kanban-title-group">
                    <div class="kanban-dot" style="background: #4ade80;"></div>
                    <h3 class="kanban-title">Done</h3>
                    <span class="kanban-count">4</span>
                </div>
                <svg style="width: 16px; height: 16px; color: #cbd5e1;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                </div>
                <div class="kanban-cards">
                <div class="kanban-card">
                    <div class="kanban-card-accent" style="background: #22c55e;"></div>
                    <div class="kanban-card-header">
                    <span class="kanban-card-tag">Marketing</span>
                    <svg style="width: 16px; height: 16px; color: #e2e8f0;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="1"></circle>
                        <circle cx="19" cy="12" r="1"></circle>
                        <circle cx="5" cy="12" r="1"></circle>
                    </svg>
                    </div>
                    <h3 class="kanban-card-title">Q3 Marketing Plan</h3>
                    <div class="kanban-card-footer">
                    <div class="kanban-card-avatar" style="background: #4ade80;"></div>
                    <div class="kanban-card-date">
                        <svg style="width: 12px; height: 12px; margin-right: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <span>Today</span>
                    </div>
                    </div>
                </div>

                <div class="kanban-fade"></div>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
</section>

