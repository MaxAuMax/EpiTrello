    justify-content: center;
    padding-top: 5rem;
    padding-bottom: 5rem;
}

.hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
}

.hero-gradient-1 {
    position: absolute;
    top: -10%;
    right: -5%;
    width: 600px;
    height: 600px;
    background: rgba(251, 146, 60, 0.2);
    border-radius: 50%;
