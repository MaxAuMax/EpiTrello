<section class="features-section">
    <div class="container">
        <div class="features-header">
        <p class="features-subtitle">Multiple Views</p>
        <h2 class="features-title">See your work, your way</h2>
        <p class="features-description">
            Choose the view that best fits your workflow. Switch between List, Timeline, and Calendar views with a single click.
        </p>
        </div>

        <div class="features-grid">
        <!-- List View Card -->
        <div class="feature-card feature-card-1">
            <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="8" y1="6" x2="21" y2="6"></line>
                <line x1="8" y1="12" x2="21" y2="12"></line>
                <line x1="8" y1="18" x2="21" y2="18"></line>
                <line x1="3" y1="6" x2="3.01" y2="6"></line>
                <line x1="3" y1="12" x2="3.01" y2="12"></line>
                <line x1="3" y1="18" x2="3.01" y2="18"></line>
            </svg>
            </div>
            <h3 class="feature-name">List View</h3>
            <p class="feature-description">
            The classic task list. Perfect for quick updates and managing your daily to-dos.
            </p>
            <div class="feature-visual list-visual">
            <div class="list-item">
                <div class="list-checkbox checked"></div>
                <div class="list-text"></div>
            </div>
            <div class="list-item">
                <div class="list-checkbox checked"></div>
                <div class="list-text short"></div>
            </div>
            <div class="list-item">
                <div class="list-checkbox"></div>
                <div class="list-text"></div>
            </div>
            <div class="list-item">
                <div class="list-checkbox"></div>
                <div class="list-text short"></div>
            </div>
            </div>
        </div>

        <!-- Timeline View Card -->
        <div class="feature-card feature-card-2">
            <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="2" x2="12" y2="6"></line>
                <line x1="12" y1="18" x2="12" y2="22"></line>
                <line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line>
                <line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line>
                <line x1="2" y1="12" x2="6" y2="12"></line>
                <line x1="18" y1="12" x2="22" y2="12"></line>
                <line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line>
                <line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line>
            </svg>
            </div>
            <h3 class="feature-name">Timeline</h3>
            <p class="feature-description">
            Visualize project timelines with a Gantt-style view. See dependencies and adjust schedules.
            </p>
            <div class="feature-visual timeline-visual">
            <div class="timeline-grid"></div>
            <div class="timeline-bar timeline-bar-1">Project Alpha</div>
            <div class="timeline-bar timeline-bar-2">Design Phase</div>
            <div class="timeline-bar timeline-bar-3">Review</div>
            </div>
        </div>

        <!-- Calendar View Card -->
        <div class="feature-card feature-card-3">
            <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
            </div>
            <h3 class="feature-name">Calendar</h3>
            <p class="feature-description">
            Plan ahead with a monthly calendar view. See all your deadlines and milestones at a glance.
            </p>
            <div class="feature-visual calendar-visual">
            <div class="calendar-header">
                <div class="calendar-day-label">S</div>
                <div class="calendar-day-label">M</div>
                <div class="calendar-day-label">T</div>
                <div class="calendar-day-label">W</div>
                <div class="calendar-day-label">T</div>
                <div class="calendar-day-label">F</div>
                <div class="calendar-day-label">S</div>
            </div>
            <div class="calendar-grid">
                <% (1..28).each do |day| %>
                <div class="calendar-day <%= 'has-event' if [5, 12, 18, 24].include?(day) %>">
                    <%= day %>
                </div>
                <% end %>
            </div>
            </div>
        </div>
        </div>
    </div>
    </section>

    <section class="cta-section">
    <div class="cta-bg-gradient cta-gradient-1"></div>
    <div class="cta-bg-gradient cta-gradient-2"></div>

    <div class="cta-content">
        <h2 class="cta-title">Ready to move work forward?</h2>
        <p class="cta-description">
        Join thousands of teams already using EpiTrello to streamline their workflow and achieve their goals faster.
        </p>
        <div class="cta-buttons">
        <%= link_to new_user_registration_path, class: "cta-btn-primary" do %>
            Start for free
            <svg style="width: 16px; height: 16px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
        <% end %>
        <button class="cta-btn-secondary">Contact sales</button>
        </div>
    </div>
</section>

