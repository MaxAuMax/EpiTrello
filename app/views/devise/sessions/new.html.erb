<div class="auth-container">
  <h1>Welcome Back</h1>
  <p class="subtitle">Sign in to your account</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if flash[:alert] %>
      <div class="error-messages">
        <h2>Login failed</h2>
        <p><%= flash[:alert] %></p>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, "Email address" %>
      <%= f.email_field :email, placeholder: "email@example.com", autocomplete: "email", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "••••••••", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="remember-me">
        <%= f.check_box :remember_me, class: "remember-checkbox" %>
        <%= f.label :remember_me, "Remember me", class: "remember-label" %>
      </div>
    <% end %>

    <div class="forgot-password">
      <%= link_to "Forgot password?", new_password_path(resource_name) %>
    </div>

    <%= f.submit "Log in", class: "button" %>
  <% end %>

  <div class="link">
    Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>
</div>

<style>
.auth-container .remember-me {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.auth-container .remember-checkbox {
  width: 16px;
  height: 16px;
  margin: 0;
  cursor: pointer;
}

.auth-container .remember-label {
  margin-left: 8px;
  margin-bottom: 0;
  font-size: 14px;
  font-weight: 400;
  color: #666;
  cursor: pointer;
}

.auth-container .forgot-password {
  text-align: right;
  margin-bottom: 24px;
}

.auth-container .forgot-password a {
  font-size: 13px;
  color: #0066cc;
  text-decoration: none;
  transition: color 0.2s ease;
}

.auth-container .forgot-password a:hover {
  color: #0052a3;
}
</style>