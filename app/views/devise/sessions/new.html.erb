<div class="auth-page">
  <%= link_to root_path, class: "auth-back-button" do %>
    <svg style="width: 16px; height: 16px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="19" y1="12" x2="5" y2="12"></line>
      <polyline points="12 19 5 12 12 5"></polyline>
    </svg>
    Back to home
  <% end %>

  <div class="auth-bg">
    <div class="auth-gradient-1"></div>
    <div class="auth-gradient-2"></div>
    <div class="auth-gradient-3"></div>
  </div>

  <div class="auth-container">
    <%= link_to root_path, class: "auth-logo" do %>
      <div class="logo-icon">
        <svg style="margin: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="3" y1="9" x2="21" y2="9"></line>
          <line x1="9" y1="9" x2="9" y2="21"></line>
        </svg>
      </div>
      <span class="logo-text">Flow</span>
    <% end %>

  <h1>Welcome Back</h1>
  <p class="subtitle">Sign in to your account to continue</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if flash[:alert] %>
      <div class="error-messages">
        <h2>Login failed</h2>
        <p><%= flash[:alert] %></p>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, "Email address" %>
      <%= f.email_field :email, placeholder: "email@example.com", autocomplete: "email", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "••••••••", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="remember-me">
        <%= f.check_box :remember_me, class: "remember-checkbox" %>
        <%= f.label :remember_me, "Remember me", class: "remember-label" %>
      </div>
    <% end %>

    <div class="forgot-password">
      <%= link_to "Forgot password?", new_password_path(resource_name) %>
    </div>

    <%= f.submit "Log in", class: "button" %>
  <% end %>

  <div class="link">
    Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>
  </div>
</div>