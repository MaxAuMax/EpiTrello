<div class="auth-page">
  <%= link_to root_path, class: "auth-back-button" do %>
    <svg style="width: 16px; height: 16px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="19" y1="12" x2="5" y2="12"></line>
      <polyline points="12 19 5 12 12 5"></polyline>
    </svg>
    Back to home
  <% end %>

  <div class="auth-bg">
    <div class="auth-gradient-1"></div>
    <div class="auth-gradient-2"></div>
    <div class="auth-gradient-3"></div>
  </div>

  <div class="auth-container">
    <div class="auth-logo">
      <div class="logo-icon">
        <svg style="margin: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="3" y1="9" x2="21" y2="9"></line>
          <line x1="9" y1="9" x2="9" y2="21"></line>
        </svg>
      </div>
      <span class="logo-text">Flow</span>
    </div>

  <h1>Create Account</h1>
  <p class="subtitle">Join Flow to start organizing your work</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if resource.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(resource.errors.count, "error") %> prohibited signup:</h2>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li>- <%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :username, "Username *" %>
      <%=
        f.text_field :username,
        class: resource.errors.include?(:username) ? "input-error" : "",
        autocomplete: "username",
        placeholder: "Username",
        autofocus: true
      %>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email address *" %>
      <%=
        f.email_field :email,
        class: resource.errors.include?(:email) ? "input-error" : "",
        autocomplete: "email",
        placeholder: "email@example.com"
      %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Password *" %>
      <% if @minimum_password_length %>
        <em class="subtitle">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%=
        f.password_field :password,
        class: resource.errors.include?(:password) ? "input-error" : "",
        autocomplete: "new-password",
        placeholder: "••••••••",
        minlength: @minimum_password_length
      %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm Password *" %>
      <%=
        f.password_field :password_confirmation,
        class: (resource.errors.include?(:password_confirmation) || resource.errors.include?(:password)) ? "input-error" : "",
        autocomplete: "new-password",
        placeholder: "••••••••",
        minlength: @minimum_password_length
      %>
    </div>

    <p class="required-notice">* All fields are required</p>

    <%= f.submit "Sign up", class: "button" %>
  <% end %>

  <div class="divider">
    <span>OR</span>
  </div>

  <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "button google-button" do %>
    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M17.64 9.2c0-.637-.057-1.251-.164-1.84H9v3.481h4.844c-.209 1.125-.843 2.078-1.796 2.717v2.258h2.908c1.702-1.567 2.684-3.874 2.684-6.615z" fill="#4285F4"/>
      <path d="M9.003 18c2.43 0 4.467-.806 5.956-2.18L12.05 13.56c-.806.54-1.836.86-3.047.86-2.344 0-4.328-1.584-5.036-3.711H.96v2.332C2.44 15.983 5.485 18 9.003 18z" fill="#34A853"/>
      <path d="M3.964 10.712c-.18-.54-.282-1.117-.282-1.71 0-.593.102-1.17.282-1.71V4.96H.957C.347 6.175 0 7.55 0 9.002c0 1.452.348 2.827.957 4.042l3.007-2.332z" fill="#FBBC05"/>
      <path d="M9.003 3.58c1.321 0 2.508.454 3.44 1.345l2.582-2.58C13.464.891 11.428 0 9.002 0 5.485 0 2.44 2.017.96 4.958L3.967 7.29c.708-2.127 2.692-3.71 5.036-3.71z" fill="#EA4335"/>
    </svg>
    Continue with Google
  <% end %>

  <div class="link">
    Already have an account? <%= link_to "Log in", new_session_path(resource_name) %>
  </div>
  </div>
</div>