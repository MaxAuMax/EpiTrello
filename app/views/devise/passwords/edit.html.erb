<div class="auth-page">
  <div class="auth-bg">
    <div class="auth-gradient-1"></div>
    <div class="auth-gradient-2"></div>
    <div class="auth-gradient-3"></div>
  </div>

  <div class="auth-container">
    <div class="auth-logo">
      <div class="logo-icon">
        <svg style="margin: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="3" y1="9" x2="21" y2="9"></line>
          <line x1="9" y1="9" x2="9" y2="21"></line>
        </svg>
      </div>
      <span class="logo-text">Flow</span>
    </div>

  <h1>Reset Password</h1>
  <p class="subtitle">Choose a new password for your account</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "New password" %>
      <% if @minimum_password_length %>
        <em class="subtitle">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, placeholder: "••••••••", autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, placeholder: "••••••••", autocomplete: "new-password" %>
    </div>

    <%= f.submit "Change my password", class: "button" %>
  <% end %>

  <div class="link">
    <%= link_to "Back to login", new_session_path(resource_name) %>
  </div>
  </div>
</div>
