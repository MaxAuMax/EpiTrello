<div class="auth-page">
  <%= link_to root_path, class: "auth-back-button" do %>
    <svg style="width: 16px; height: 16px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="19" y1="12" x2="5" y2="12"></line>
      <polyline points="12 19 5 12 12 5"></polyline>
    </svg>
    Back to home
  <% end %>

  <div class="auth-bg">
    <div class="auth-gradient-1"></div>
    <div class="auth-gradient-2"></div>
    <div class="auth-gradient-3"></div>
  </div>

  <div class="auth-container">
    <div class="auth-logo">
      <div class="logo-icon">
        <svg style="margin: 4px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="3" y1="9" x2="21" y2="9"></line>
          <line x1="9" y1="9" x2="9" y2="21"></line>
        </svg>
      </div>
      <span class="logo-text">Flow</span>
    </div>

  <h1>Forgot Password?</h1>
  <p class="subtitle">We'll send you instructions to reset it</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email address" %>
      <%= f.email_field :email, placeholder: "email@example.com", autocomplete: "email", autofocus: true %>
    </div>

    <%= f.submit "Send reset instructions", class: "button" %>
  <% end %>

  <div class="link">
    <%= link_to "Back to login", new_session_path(resource_name) %>
  </div>
  </div>
</div>
