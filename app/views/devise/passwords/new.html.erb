<div class="container">
  <h1>Forgot Password?</h1>
  <p class="subtitle">Enter your email to reset your password</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <% if resource.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(resource.errors.count, "error") %> occurred:</h2>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li>- <%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, "Email address" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@example.com" %>
    </div>

    <%= f.submit "Send reset instructions", class: "button" %>
  <% end %>

  <div class="link">
    <%= link_to "Back to login", new_session_path(resource_name) %>
  </div>
</div>

