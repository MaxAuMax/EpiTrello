<div data-modal-target="modal" class="task-modal-wrapper hidden">
  <div class="task-modal-backdrop" data-action="click->modal#close">
    <div class="task-modal-content" onclick="event.stopPropagation()">
      <button type="button" class="modal-close-button-absolute" data-action="click->modal#close" aria-label="Close">
        <svg style="width: 18px; height: 18px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
      
      <%= yield %>
    </div>
  </div>
</div>

<style>
.task-modal-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: none;
}

.task-modal-wrapper:not(.hidden) {
  display: block;
}

.task-modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  overflow-y: auto;
}

.task-modal-content {
  background: white;
  border-radius: var(--radius-xl);
  width: 700px;
  max-width: 90vw;
  height: auto;
  max-height: 80vh;
  margin: auto;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  position: relative;
  animation: modalSlideIn 0.2s ease-out;
  padding: var(--spacing-xl);
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-close-button-absolute {
  position: absolute;
  top: var(--spacing-md);
  right: var(--spacing-md);
  width: 32px;
  height: 32px;
  border-radius: var(--radius-md);
  background: var(--color-slate-100);
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-base);
  color: var(--color-slate-600);
  z-index: 10;
}

.modal-close-button-absolute:hover {
  background: var(--color-slate-200);
}

.modal-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-2xl);
  min-height: 200px;
}

.modal-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid var(--color-slate-200);
  border-top-color: var(--color-blue-500);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.modal-error {
  padding: var(--spacing-xl);
  text-align: center;
  color: var(--color-red-600);
}

turbo-frame#task_details {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}
</style>
